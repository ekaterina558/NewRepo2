<Page x:Class="KP_Balashova_.PageMain.PageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_Balashova_.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdmin">
    <Grid>
       
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин" Style="{StaticResource Label}"/>
            <TextBox Text="" Style="{StaticResource TextBox}" x:Name="TxbLogin" Height="34" Width="305"/>
            <Label Content="Введите пароль" Style="{StaticResource Label}"/>
            <PasswordBox Style="{StaticResource PasswordBox}" x:Name="PsbPassword" Height="34" Width="305"/>
            <Button Content="Войти" x:Name="Btn_Adm" Style="{StaticResource ButtonY}" Click="Btn_Adm_Click"  HorizontalAlignment="Center"/>
            </StackPanel>
       
        <Button Content="Назад" Style="{StaticResource ButtonY}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Button_Click" />
    </Grid>
</Page>
