<Page x:Class="KP_Balashova_.PageMain.PageKorzina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_Balashova_.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageKorzina">

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка таблицы с ЧЁРНЫМИ границами -->
        <Border Grid.Row="0" Background="#fae322" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!-- Блюдо -->
                <Border BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Блюдо" 
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="10,5"/>
                </Border>

                <!-- Количество -->
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Количество" 
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                </Border>

                <!-- Цена -->
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Цена" 
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                </Border>

                <!-- Сумма -->
                <Border Grid.Column="3">
                    <TextBlock Text="Сумма" 
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Список товаров -->
        <DataGrid x:Name="CartListView" 
          ItemsSource="{Binding CartItems}"
          Grid.Row="1"
          Margin="0"
          BorderThickness="0"
          HeadersVisibility="None"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserReorderColumns="False"
          CanUserResizeColumns="False"
          CanUserSortColumns="False"
          SelectionUnit="FullRow"
          IsReadOnly="True">

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <!-- Название блюда -->
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DishesName}" 
                               Margin="10,5"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Количество -->
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Button Content="-" 
                                Width="25"
                                Style="{StaticResource ButtonT}"
                                DataContext="{Binding}"
                                Click="DecreaseQuantity_Click"/>
                                <TextBlock Text="{Binding Quantity}" 
                                   MinWidth="20"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Margin="5,0"/>
                                <Button Content="+" 
                                Width="25"
                                Style="{StaticResource ButtonT}"
                                DataContext="{Binding}"
                                Click="IncreaseQuantity_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Цена -->
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Price, StringFormat='{}{0:0.##} ₽'}" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="14"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Сумма -->
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormattedTotalPrice, Mode=OneWay}" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              FontSize="14"
                              FontWeight="Bold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель итогов -->
        <Border Grid.Row="2" 
        Background="White"
        BorderBrush="Black"
        BorderThickness="0,1,0,0"
        Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Назад" 
                Style="{StaticResource ButtonY}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Width="80"
                Click="Button_Click"/>

                <StackPanel Grid.Column="1" 
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBlock Text="Итого: " 
                       FontSize="16"
                       Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding FormattedTotalCartPrice, Mode=OneWay}" 
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#2b96d1"/>
                    <Button Content="Оформить заказ" 
                    Style="{StaticResource ButtonY}" 
                    Width="150"
                    Height="40"
                    Margin="20,0,0,0"
                    Click="BtnCheckout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
