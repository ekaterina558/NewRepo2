<Page x:Class="KP_Balashova_.PageMain.PageOfZakaz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_Balashova_.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageOfZakaz" >

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок с иконкой -->
        <Border Grid.Row="0" Background="White" Padding="12" BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Подтверждение заказа" 
               FontSize="18" 
               FontWeight="Bold"
               VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основной контент с анимацией прокрутки -->
        <ScrollViewer Grid.Row="1" 
          VerticalScrollBarVisibility="Auto"
          Padding="10"
          Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка - Ваш заказ -->
                <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8"
                Padding="16"
                Margin="0,0,5,12"
                BorderBrush="#F0F0F0"
                BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Ваш заказ:" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                        <!-- Заголовки столбцов -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Наименование" 
                               Grid.Column="0" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               Margin="5,0,0,0"/>

                            <TextBlock Text="Количество" 
                               Grid.Column="1" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>

                            <TextBlock Text="Цена" 
                               Grid.Column="2" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Right"
                               Margin="0,0,5,0"/>
                        </Grid>

                        <!-- Список товаров -->
                        <ListView x:Name="OrderItemsListView" 
                          ItemsSource="{Binding CartItems}"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Height="200">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding DishesName}" 
                                           Grid.Column="0" 
                                           FontSize="14"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="5,0,0,0"/>

                                        <TextBlock Text="{Binding Quantity}" 
                                           Grid.Column="1" 
                                           FontSize="14" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:0.##} ₽'}"  
                                           Grid.Column="2" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <Separator Margin="0,12" Background="#F0F0F0"/>

                        <!-- Итоговая сумма -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Итого:" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Grid.Column="0"/>

                            <TextBlock Text="{Binding TotalCartPrice, StringFormat='{}{0:0.##} ₽'}" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#FF6200EE"
                               Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Правая колонка - Остальные элементы -->
                <StackPanel Grid.Column="1" Margin="5,0,0,12">
                    <!-- Блок с выбором оплаты -->
                    <Border Background="White" 
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12"
                    BorderBrush="#F0F0F0"
                    BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Способ оплаты:" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                            <RadioButton x:Name="CashRadio" 
                                 Content="СБП" 
                                 GroupName="PaymentType" 
                                 IsChecked="True"
                                 Margin="0,0,0,8"
                                 FontSize="14"
                                 Style="{StaticResource ModernRadioButton}"/>

                            <RadioButton x:Name="CardRadio" 
                                 Content="Банковская карта" 
                                 GroupName="PaymentType"
                                 FontSize="14"
                                 Style="{StaticResource ModernRadioButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- Блок с выбором чека -->
                    <Border Background="White" 
                 CornerRadius="8"
                 Padding="16"
                 Margin="0,0,0,12"
                 BorderBrush="#F0F0F0"
                 BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Вам чек нужен?" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="ReceiptYesRadio" 
                             Content="Да" 
                             GroupName="ReceiptGroup" 
                             IsChecked="True"
                             Style="{StaticResource ReceiptRadioButton}"
                             Margin="0,0,12,0"
                             FontSize="14"/>

                                <RadioButton x:Name="ReceiptNoRadio" 
                             Content="Нет" 
                             GroupName="ReceiptGroup"
                             Style="{StaticResource ReceiptRadioButton}"
                             FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Блок с выбором типа заказа -->
                    <Border x:Name="OrderTypeBlock" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12"
                    BorderBrush="#F0F0F0"
                    BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Тип заказа:" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

                            <RadioButton x:Name="TakeawayRadio" 
                         Content="С собой" 
                         GroupName="OrderType" 
                         IsChecked="True"
                         Margin="0,0,0,8"
                         FontSize="14"
                         Checked="OrderType_Checked"/>

                            <RadioButton x:Name="DineInRadio" 
                         Content="В кафе" 
                         GroupName="OrderType"
                         FontSize="14"
                         Checked="OrderType_Checked"/>
                        </StackPanel>
                    </Border>

                    <!-- Блок с выбором столика (видим только при выборе "В кафе") -->
                    <Border x:Name="TableNumberBlock" 
                  Background="White" 
                  CornerRadius="8"
                  Padding="16"
                  Margin="0,0,0,12"
                  BorderBrush="#F0F0F0"
                  BorderThickness="1"
                  Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Номер столика:" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,8"/>
                            <ComboBox x:Name="TableNumberComboBox" 
                         FontSize="14"
                         DisplayMemberPath="Number"
                         SelectedValuePath="Id"/>
                        </StackPanel>
                    </Border>

                    <!-- Блок оплаты -->
                    <Border x:Name="PaymentBlock" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12"
                    BorderBrush="#F0F0F0"
                    BorderThickness="1"
                    Visibility="Collapsed">
                        <StackPanel>
                            <Image x:Name="QrCodeImage" 
                           Source="/Resources/qr-kod.png"
                           Width="200"
                           Height="200"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"
                           Visibility="Collapsed"/>

                            <TextBlock x:Name="CardPaymentText" 
                               Text="Приложите карту к терминалу"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                            <Button Content="Отмена оплаты"
                            x:Name="CancelPaymentButton"
                            Style="{StaticResource ButtonY}"
                            Width="150"
                            HorizontalAlignment="Center"
                            Click="CancelPaymentButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
        Background="White" 
        BorderBrush="#FFEEEEEE" 
        Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Назад" 
                x:Name="BackButton" 
                Style="{StaticResource ButtonY}" 
                Width="100" 
                Click="BackButton_Click"/>

                <Button Content="Подтвердить заказ" 
                Style="{StaticResource ButtonY}" 
                Grid.Column="2" 
                Width="200" 
                Click="ConfirmOrderButton_Click"
                FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</Page>
